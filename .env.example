# API Configuration
# Set to 'true' to use real API data instead of mock data
VITE_USE_REAL_API=false

# Meta Ads (Facebook/Instagram)
VITE_META_ACCESS_TOKEN=your_meta_access_token_here
VITE_META_ACCOUNT_ID=act_your_account_id_here

# Google Ads
VITE_GOOGLE_ACCESS_TOKEN=your_google_access_token_here
VITE_GOOGLE_CUSTOMER_ID=your_customer_id_here
VITE_GOOGLE_CLIENT_ID=your_client_id_here
VITE_GOOGLE_CLIENT_SECRET=your_client_secret_here

# TikTok Ads
VITE_TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
VITE_TIKTOK_ADVERTISER_ID=your_advertiser_id_here

# LinkedIn Ads
VITE_LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
VITE_LINKEDIN_ACCOUNT_ID=your_account_id_here

# Sync Configuration
VITE_API_SYNC_INTERVAL=60  # Minutes between automatic syncs
VITE_API_CACHE_DURATION=15  # Minutes to cache API responses
